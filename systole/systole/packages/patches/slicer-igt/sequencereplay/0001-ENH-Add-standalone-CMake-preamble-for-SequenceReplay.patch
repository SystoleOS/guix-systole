From 8d66a90aa18178f427faf7acb7d6716e91d961b2 Mon Sep 17 00:00:00 2001
From: Rafael Palomar <rafael.palomar@ous-research.no>
Date: Fri, 27 Feb 2026 12:06:48 +0100
Subject: [PATCH] ENH: Add standalone CMake preamble for SequenceReplay

Add cmake_minimum_required + find_package(Slicer) preamble
so the scripted module can be built standalone against an
installed Slicer.
---
 SequenceReplay/CMakeLists.txt | 18 ++++++++++++++++++
 1 file changed, 18 insertions(+)

diff --git a/SequenceReplay/CMakeLists.txt b/SequenceReplay/CMakeLists.txt
index e64c9d4..a449034 100644
--- a/SequenceReplay/CMakeLists.txt
+++ b/SequenceReplay/CMakeLists.txt
@@ -1,3 +1,21 @@
+cmake_minimum_required(VERSION 3.16.3...3.19.7 FATAL_ERROR)
+
+project(SequenceReplay)
+
+set(CMAKE_CXX_STANDARD "17")
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+if(NOT Slicer_QTSCRIPTEDMODULES_LIB_DIR)
+  set(Slicer_QTSCRIPTEDMODULES_LIB_DIR
+    "lib/Slicer-${Slicer_VERSION}/qt-scripted-modules")
+endif()
+if(NOT Slicer_INSTALL_QTSCRIPTEDMODULES_LIB_DIR)
+  set(Slicer_INSTALL_QTSCRIPTEDMODULES_LIB_DIR
+    "lib/Slicer-${Slicer_VERSION}/qt-scripted-modules")
+endif()
+
 #-----------------------------------------------------------------------------
 set(MODULE_NAME SequenceReplay)
 
