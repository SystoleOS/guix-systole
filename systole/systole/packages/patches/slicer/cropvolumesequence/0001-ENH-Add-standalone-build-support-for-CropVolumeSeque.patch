From 8f4d5daa7d27da8c920c029bbb5ac093fa826ac0 Mon Sep 17 00:00:00 2001
From: Rafael Palomar <rafael.palomar@ous-research.no>
Date: Sun, 22 Feb 2026 18:12:26 +0100
Subject: [PATCH] ENH: Add standalone build support for CropVolumeSequence
 scripted module

---
 .../CropVolumeSequence/CMakeLists.txt         | 23 +++++++++++++++----
 1 file changed, 19 insertions(+), 4 deletions(-)

diff --git a/Modules/Scripted/CropVolumeSequence/CMakeLists.txt b/Modules/Scripted/CropVolumeSequence/CMakeLists.txt
index adf25235ba..22c502133c 100644
--- a/Modules/Scripted/CropVolumeSequence/CMakeLists.txt
+++ b/Modules/Scripted/CropVolumeSequence/CMakeLists.txt
@@ -1,3 +1,22 @@
+cmake_minimum_required(VERSION 3.16.3...3.19.7 FATAL_ERROR)
+project(CropVolumeSequence)
+
+set(CMAKE_CXX_STANDARD "17")
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+# Slicer_QTSCRIPTEDMODULES_LIB_DIR and Slicer_INSTALL_QTSCRIPTEDMODULES_LIB_DIR
+# are only populated when Slicer is built with Slicer_BUILD_QTSCRIPTEDMODULES=ON.
+if(NOT Slicer_QTSCRIPTEDMODULES_LIB_DIR)
+  set(Slicer_QTSCRIPTEDMODULES_LIB_DIR
+      "lib/Slicer-${Slicer_VERSION}/qt-scripted-modules")
+endif()
+if(NOT Slicer_INSTALL_QTSCRIPTEDMODULES_LIB_DIR)
+  set(Slicer_INSTALL_QTSCRIPTEDMODULES_LIB_DIR
+      "lib/Slicer-${Slicer_VERSION}/qt-scripted-modules")
+endif()
+
 #-----------------------------------------------------------------------------
 set(MODULE_NAME CropVolumeSequence)
 
@@ -30,15 +49,11 @@ if(BUILD_TESTING)
     set(MODULE_BUILD_DIR "${CMAKE_BINARY_DIR}/${Slicer_QTLOADABLEMODULES_LIB_DIR}")
   endif()
 
-  # Register the unittest subclass in the main script as a ctest.
-  # Note that the test will also be available at runtime.
   slicer_add_python_unittest(
     SCRIPT ${MODULE_NAME}.py
-    # TODO: slicer_add_python_unittest should take care of adding the additional module paths
     SLICER_ARGS
       --additional-module-paths ${MODULE_BUILD_DIR} ${CMAKE_BINARY_DIR}/${Slicer_QTSCRIPTEDMODULES_LIB_DIR}
     )
 
-  # Additional build-time testing
   add_subdirectory(Testing)
 endif()
