From 8a6f34869aae86c56bd40c6925f89e7b71adf69b Mon Sep 17 00:00:00 2001
From: Rafael Palomar <rafael.palomar@ous-research.no>
Date: Sun, 22 Feb 2026 18:25:10 +0100
Subject: [PATCH] ENH: Add standalone build support for DICOM scripted module

---
 Modules/Scripted/DICOM/CMakeLists.txt | 18 ++++++++++++++++++
 1 file changed, 18 insertions(+)

diff --git a/Modules/Scripted/DICOM/CMakeLists.txt b/Modules/Scripted/DICOM/CMakeLists.txt
index c942cc78e5..c0853f83bb 100644
--- a/Modules/Scripted/DICOM/CMakeLists.txt
+++ b/Modules/Scripted/DICOM/CMakeLists.txt
@@ -1,3 +1,21 @@
+cmake_minimum_required(VERSION 3.16.3...3.19.7 FATAL_ERROR)
+project(DICOM)
+
+set(CMAKE_CXX_STANDARD "17")
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+# Slicer_QTSCRIPTEDMODULES_LIB_DIR and Slicer_INSTALL_QTSCRIPTEDMODULES_LIB_DIR
+# are only populated when Slicer is built with Slicer_BUILD_QTSCRIPTEDMODULES=ON.
+if(NOT Slicer_QTSCRIPTEDMODULES_LIB_DIR)
+  set(Slicer_QTSCRIPTEDMODULES_LIB_DIR
+      "lib/Slicer-${Slicer_VERSION}/qt-scripted-modules")
+endif()
+if(NOT Slicer_INSTALL_QTSCRIPTEDMODULES_LIB_DIR)
+  set(Slicer_INSTALL_QTSCRIPTEDMODULES_LIB_DIR
+      "lib/Slicer-${Slicer_VERSION}/qt-scripted-modules")
+endif()
 
 #-----------------------------------------------------------------------------
 set(MODULE_NAME DICOM)
