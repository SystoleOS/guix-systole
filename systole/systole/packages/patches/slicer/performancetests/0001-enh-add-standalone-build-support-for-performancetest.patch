From fb1de55d86c8f51235339bafb26733e813c9c617 Mon Sep 17 00:00:00 2001
From: Rafael Palomar <rafael.palomar@ous-research.no>
Date: Sun, 22 Feb 2026 18:10:38 +0100
Subject: [PATCH] ENH: Add standalone build support for PerformanceTests
 scripted module

---
 .../Scripted/PerformanceTests/CMakeLists.txt  | 22 ++++++++++++++++++-
 1 file changed, 21 insertions(+), 1 deletion(-)

diff --git a/Modules/Scripted/PerformanceTests/CMakeLists.txt b/Modules/Scripted/PerformanceTests/CMakeLists.txt
index a64cbd19ab..51bd175ca1 100644
--- a/Modules/Scripted/PerformanceTests/CMakeLists.txt
+++ b/Modules/Scripted/PerformanceTests/CMakeLists.txt
@@ -1,3 +1,21 @@
+cmake_minimum_required(VERSION 3.16.3...3.19.7 FATAL_ERROR)
+project(PerformanceTests)
+
+set(CMAKE_CXX_STANDARD "17")
+
+find_package(Slicer REQUIRED)
+include(${Slicer_USE_FILE})
+
+# Slicer_QTSCRIPTEDMODULES_LIB_DIR and Slicer_INSTALL_QTSCRIPTEDMODULES_LIB_DIR
+# are only populated when Slicer is built with Slicer_BUILD_QTSCRIPTEDMODULES=ON.
+if(NOT Slicer_QTSCRIPTEDMODULES_LIB_DIR)
+  set(Slicer_QTSCRIPTEDMODULES_LIB_DIR
+      "lib/Slicer-${Slicer_VERSION}/qt-scripted-modules")
+endif()
+if(NOT Slicer_INSTALL_QTSCRIPTEDMODULES_LIB_DIR)
+  set(Slicer_INSTALL_QTSCRIPTEDMODULES_LIB_DIR
+      "lib/Slicer-${Slicer_VERSION}/qt-scripted-modules")
+endif()
 
 #-----------------------------------------------------------------------------
 set(MODULE_NAME PerformanceTests)
@@ -18,4 +36,6 @@ slicerMacroBuildScriptedModule(
   WITH_GENERIC_TESTS
   )
 
-slicer_add_python_unittest(SCRIPT PerformanceTests.py)
+if(BUILD_TESTING)
+  slicer_add_python_unittest(SCRIPT PerformanceTests.py)
+endif()
